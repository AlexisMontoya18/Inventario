@model SystemaVidanta.Models.User

@{
    ViewBag.Title = "Create";
}
@if (!User.Identity.IsAuthenticated)
{
    @*<link href="@Url.Content("~/Content/fondoLogin.css")" rel="stylesheet" type="text/css" />*@
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        <div class="container">

            <div class=" well col-sm-6 col-md-6 col-lg-6">
                <h2 align="center">CREA TU CUENTA </h2> <br />
                <div class=" col-sm-12 col-md-12 col-lg-12">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @*<div class="form-group">
                            @Html.LabelFor(model => model.ID, htmlAttributes: new { @class = "control-label col-sm-2 " })
                            <div class="form-group">
                                @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                            </div>
                        </div>*@
                </div>
                <div class=" col-sm-12 col-md-12 col-lg-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-sm-2" })
                        <div class="form-group">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese su nombre completo" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class=" col-sm-12 col-md-12 col-lg-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-sm-2" })
                        <div class="form-group">
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese solo un nombre " } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class=" col-sm-12 col-md-12 col-lg-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-sm-2" })
                        <div class="form-group">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese una contraseña" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class=" col-sm-12 col-md-12 col-lg-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Level, htmlAttributes: new { @class = "control-label col-sm-2 " })
                        <div class="form-group">
                            @Html.EditorFor(model => model.Level, new { htmlAttributes = new { @class = "form-control", placeholder = "Nivel 1: Admin Nivel 2:Técnico" } })
                            @Html.ValidationMessageFor(model => model.Level, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class=" col-sm-12 col-md-12 col-lg-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Active, htmlAttributes: new { @class = "control-label col-sm-2" })
                        <div class="form-group">
                            @Html.EditorFor(model => model.Active, new { htmlAttributes = new { @class = "form-control", placeholder = "Nivel 1:activo Nivel 2:inactivo" } })
                            @Html.ValidationMessageFor(model => model.Active, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="input-group-btn">
                    <div class="col-md-offset-3 col-md-3">
                        <input type="submit" value="Crear usuario" class="btn btn-primary" />
                    </div>
                </div>
                <div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="@Url.Action("Index")" class="btn btn-default btn-sm">Ir a la lista<span class=" glyphicon glyphicon-arrow-left"></span></a>
                    }
                </div>
            </div>
        </div>
    </div>


}



