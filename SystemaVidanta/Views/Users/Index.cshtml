@model IEnumerable<SystemaVidanta.Models.User>

@{
    ViewBag.Title = "Index";
}

<h1 align="center">USUARIOS REGISTRADOS </h1>

<p>

    <a href="@Url.Action("Create")" class="btn btn-success btn-xs">Crear Nuevo <span class="glyphicon glyphicon-user"></span></a>

</p>

<table class=" well table table-bordered">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <!--<th>-->
            @*@Html.DisplayNameFor(model => model.Password)*@
        <!--</th>-->
        <th>
            @Html.DisplayNameFor(model => model.Level)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (User.Identity.Name!=item.ID)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <!--<td>-->
                @*@Html.DisplayFor(modelItem => item.Password)*@
            <!--</td>-->
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.ID })" class="btn btn-warning btn-xs">Editar <span class="glyphicon glyphicon-pencil"></span></a>
                <a href="@Url.Action("Details", new { id = item.ID })" class="btn btn-info btn-xs">Info <span class="glyphicon glyphicon-info-sign"></span></a>
                <a href="@Url.Action("Delete", new { id = item.ID })" class="btn btn-danger btn-xs">Borrar <span class="glyphicon glyphicon-trash"></span></a>
            </td>
        </tr>
        }
    }

</table>
